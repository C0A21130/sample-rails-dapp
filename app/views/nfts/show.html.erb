<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <p>コントラクトアドレス: <%= @contract_address %></p>
    <p>トークンID: <%= @token_id %></p>
    <p>所有者のアドレス: <%= @owner %></p>
    <p><%= image_tag @image, class: "mt-6 rounded-lg" %></p>

    <%= link_to "NFT一覧に戻る", nfts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>